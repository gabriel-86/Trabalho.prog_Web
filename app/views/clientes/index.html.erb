<p style="color: green"><%= notice %></p>

<% content_for :title, "Clientes" %>

<h1>Clientes</h1>

<%= form_with url: clientes_path, method: :get, local: true do |form| %>
  <div class="input-group mb-3">
  <%= form.text_field :search, class: "form-control", placeholder: "Buscar cliente", value: params[:search] %>
    <button class="btn btn-primary" type="submit">Buscar</button>
  </div>
<% end %>

<!-- Tabela com Bootstrap -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.telefone %></td>
        <td>
          <%= link_to 'Ver', cliente, class: "btn btn-info btn-sm" %>
          <%= link_to 'Editar', edit_cliente_path(cliente), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo cliente", new_cliente_path, class: "btn btn-success" %>
